<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sdk_white_full_rounded_background">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/sdk_cell_question_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_likert_label"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <io.mtksdk.inappsurvey.custom.widget.MethinksTextView
                        android:id="@+id/tv_label_01"
                        android:textSize="13sp"
                        android:lineSpacingExtra="6dp"
                        android:gravity="center"
                        android:textColor="@color/baseTextColor"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <io.mtksdk.inappsurvey.custom.widget.MethinksTextView
                        android:id="@+id/tv_label_02"
                        android:textSize="13sp"
                        android:lineSpacingExtra="6dp"
                        android:gravity="center"
                        android:textColor="@color/baseTextColor"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <io.mtksdk.inappsurvey.custom.widget.MethinksTextView
                        android:id="@+id/tv_label_03"
                        android:textSize="13sp"
                        android:lineSpacingExtra="6dp"
                        android:gravity="center"
                        android:textColor="@color/baseTextColor"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <io.mtksdk.inappsurvey.custom.widget.MethinksTextView
                        android:id="@+id/tv_label_04"
                        android:textSize="13sp"
                        android:lineSpacingExtra="6dp"
                        android:gravity="center"
                        android:textColor="@color/baseTextColor"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <io.mtksdk.inappsurvey.custom.widget.MethinksTextView
                        android:id="@+id/tv_label_05"
                        android:textSize="13sp"
                        android:lineSpacingExtra="6dp"
                        android:gravity="center"
                        android:textColor="@color/baseTextColor"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <io.mtksdk.inappsurvey.custom.widget.MethinksTextView
                        android:id="@+id/tv_label_06"
                        android:textSize="13sp"
                        android:lineSpacingExtra="6dp"
                        android:gravity="center"
                        android:textColor="@color/baseTextColor"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <io.mtksdk.inappsurvey.custom.widget.MethinksTextView
                        android:id="@+id/tv_label_07"
                        android:textSize="13sp"
                        android:lineSpacingExtra="6dp"
                        android:gravity="center"
                        android:textColor="@color/baseTextColor"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_likert_dot"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/iv_dot_01"
                        android:src="@drawable/ic_img_single_select_nor"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:layout_width="44dp"
                        android:layout_height="44dp" />

                    <ImageView
                        android:id="@+id/iv_dot_02"
                        android:src="@drawable/ic_img_single_select_nor"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:layout_width="44dp"
                        android:layout_height="44dp" />

                    <ImageView
                        android:id="@+id/iv_dot_03"
                        android:src="@drawable/ic_img_single_select_nor"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:layout_width="44dp"
                        android:layout_height="44dp" />

                    <ImageView
                        android:id="@+id/iv_dot_04"
                        android:src="@drawable/ic_img_single_select_nor"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:layout_width="44dp"
                        android:layout_height="44dp" />

                    <ImageView
                        android:id="@+id/iv_dot_05"
                        android:src="@drawable/ic_img_single_select_nor"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:layout_width="44dp"
                        android:layout_height="44dp" />

                    <ImageView
                        android:id="@+id/iv_dot_06"
                        android:src="@drawable/ic_img_single_select_nor"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:layout_width="44dp"
                        android:layout_height="44dp" />

                    <ImageView
                        android:id="@+id/iv_dot_07"
                        android:src="@drawable/ic_img_single_select_nor"
                        android:layout_weight="1"
                        android:padding="8dp"
                        android:layout_width="44dp"
                        android:layout_height="44dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>